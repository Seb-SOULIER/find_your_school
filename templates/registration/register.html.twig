{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
    <div class="container-fluid h-100">
        <div class="row page h-100">
            <div class="d-flex flex-column col-lg-4 col-12 menu-rigth
             text-center justify-content-center align-items-center">
                {{ form_start(registrationForm) }}
                <div class="d-flex flex-column text-center justify-content-center align-items-center h-100 w-100">
                    <div class="card text-center shadow w-100">
                        <div class="card-header">
                            <div class="form-control shadow-sm font-form">
                                <div class="text-danger">
                                    {{ form_errors(registrationForm.login) }}
                                </div>
                                {{ form_label(registrationForm.login) }}
                                {{ form_widget(registrationForm.login) }}

                                <div class="text-danger">
                                    {{ form_errors(registrationForm.email) }}
                                </div>
                                {{ form_label(registrationForm.email) }}
                                {{ form_widget(registrationForm.email) }}

                                <div class="text-danger">
                                    {{ form_errors(registrationForm.plainPassword) }}
                                </div>
                                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                                {{ form_widget(registrationForm.plainPassword) }}

                                <div class="mt-2">
                                    {{ form_label(registrationForm.agreeTerms) }}
                                    {{ form_widget(registrationForm.agreeTerms) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-secondary btn-cs mx-auto mt-3" type="submit">S'inscrire</button>

                {{ form_end(registrationForm) }}

            </div>
            <div class="d-flex col-lg-8 menu-left">
                <div class="d-flex flex-column col-11 m-auto">
                    <img class="image" src="{{ asset('build/images/register.png') }}" alt="Login"/>
                    <div>
                        <h2 class="text-light">Identifie toi! </h2>
                        <p class="text-light font-small">
                            Créer un compte pour avoir acces à toutes les infos sur l'école choisie.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
