{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
    <div class="container-fluid h-100">
        <div class="row page h-100">
            <div class="d-flex flex-column col-lg-4 col-12 menu-rigth
             text-center justify-content-center align-items-center">
                <form method="post" class="w-100 d-flex flex-column">
                <div class="d-flex flex-column text-center justify-content-center align-items-center h-100 w-100">
                    <div class="card text-center shadow w-75">
                        <div class="card-header">
                            <div class="form-control shadow-sm font-form">
                                    {% if error %}
                                        <div class="alert alert-danger">
                                            {{ error.messageKey|trans(error.messageData, 'security') }}
                                        </div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3 d-flex flex-column">
                                            <span> Vous êtes déjà connecté sous le nom de {{ app.user.username }},</span>
                                            <span><a href="{{ path('app_logout') }}"> Se deconnecter </a></span>
                                        </div>
                                    {% endif %}
                                    <h1 class="h3 mb-3 font-weight-normal"> S'identifier </h1>
                                    <label for="inputEmail">Email</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                           class="form-control" autocomplete="email" required autofocus>
                                    <label for="inputPassword">Mot de passe :</label>
                                    <input type="password" name="password" id="inputPassword"
                                           class="form-control" autocomplete="current-password" required>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <button class="btn btn-secondary btn-cs mx-auto mt-3" type="submit">Se connecter</button>
                </div>
                <div>
                    <a class="btn btn-secondary btn-cs mx-auto mt-5" href="{{ path('app_register') }}">S'inscrire</a>
                </div>
                </form>
            </div>
            <div class="d-flex col-lg-8 menu-left">
                <div class="d-flex flex-column col-11 m-auto">
                    <img class="image" src="{{ asset('build/images/login.png') }}" alt="Login"/>
                    <div>
                        <h2 class="text-light">Identifie toi! </h2>
                        <p class="text-light font-small">
                            Inscrivez-vous et retrouver vos données et infos sur l'école choisie.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
